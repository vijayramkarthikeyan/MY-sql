create database students;
show databases;
use students;
create table student_details(Roll_no varchar(10) not null,name varchar(25) not null,year int(5) not null,college varchar(15));
describe student_details;
insert student_details values("15BMC205","VIJAYRAM","4","KCT");
create database employees;
show databases;
use employees;
create table employee_details(employee_no varchar(10) not null,name varchar(25) not null,experience int(5) not null,company varchar(15));
describe employee_details;
insert employee_details values("007","VISHAL","1","TCS");
create database production;
show databases;
use production;
create table production_details(production_ID varchar(10) not null,product_name varchar(25) not null,production_year int(5) not null,company varchar(15));
describe production_details;
insert production_details values("123","gear","2019","VR industry");
use students;
drop table student_details;
use production;
alter table production_details DROP COLUMN production_year;
